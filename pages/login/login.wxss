page,.box {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
  }
.header {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 80px;
}
.back {
    position: absolute;
    left: 10px;
}
.main {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.main input {
    border: 1px solid #ebebeb;
    border-radius: 10px;
    width: 80%;
    padding: 10px;
    margin: 10px;
}
.main button {
    width: 90% !important;
    border-radius: 10px;
}
